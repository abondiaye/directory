    <label class="day-night">
        <input type="checkbox" checked />
        <div></div>
    </label>

    <!-- twitter -->
    <script>
    // Dark & Light toggle
    const cards = document.querySelectorAll(".card");

    cards.forEach((card) => {
        const toggleInput = card.querySelector(".day-night input");

        toggleInput.addEventListener("change", () => {
        card.classList.add("toggle");
        setTimeout(() => {
            card.classList.toggle("light");

            setTimeout(() => card.classList.remove("toggle"), 10);
        }, 5);
        });
    });
    </script>
