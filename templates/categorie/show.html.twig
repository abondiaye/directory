{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
    <a href="{{ path('ajouter_categorie') }}">Ajouter une Catégorie</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom de la Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>
                        <form method="post" action="{{ path('modifier_categorie', {'id': categorie.id}) }}">
                            {{ form_widget(form.nom) }}
                            <button type="submit">Valider</button>
                        </form>
                    </td>
                    <td>
                        <a href="{{ path('supprimer_categorie', {'id': categorie.id}) }}">Supprimer</a>
                        
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}