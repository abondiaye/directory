{# templates/article/index.html.twig #}

{# Étend le layout de base #}
{% extends 'base.html.twig' %}

{# Définit le titre de la page #}
{% block title %}Liste des Articles{% endblock %}

{# Contenu principal de la page #}
{% block body %}
    <h1>Liste des Articles</h1>

    {# Boucle sur chaque article et affiche son titre avec un lien #}
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
                <small>Publié le {{ article.publishedAt | date('Y-m-d') }}</small>
            </li>
        {% else %}
            <li>Aucun article trouvé.</li>
        {% endfor %}
    </ul>

    {# Lien pour créer un nouvel article #}
    <a href="{{ path('article_new') }}">Créer un nouvel article</a>
{% endblock %}