{% extends 'base.html.twig' %}

{% block title %}Ajouter une Catégorie{% endblock %}

{% block body %}
    <h1>Ajouter une Catégorie</h1>
    
    {# Début du formulaire #}
    {{ form_start(form) }}

    {# Champ pour le nom de la catégorie #}
    {{ form_row(form.name) }}

    {# Champ pour la description de la catégorie #}
    {{ form_row(form.description) }}

    {# Bouton de soumission du formulaire #}
    <button type="submit" class="btn btn-primary">Ajouter</button>

    {# Fin du formulaire #}
    {{ form_end(form) }}

    {# Lien de retour à la liste des catégories #}
    <a href="{{ path('liste_categories') }}">Retour à la liste des catégories</a>
{% endblock %}