<script>
    document.addEventListener("DOMContentLoaded", function() {
        const navbar = document.querySelector(".navbar");
        const scrollStyles = {
            backgroundColor: "#357C62",
            boxShadow: "0 4px 6px rgba(0, 0, 0, 0.1)",
        };
        const originalStyles = {
            backgroundColor: "transparent",
            boxShadow: "none",
        };

        function handleScroll() {
            if (window.scrollY > 100) {
                gsap.to(navbar, { duration: 0.3, ...scrollStyles });
            } else {
                gsap.to(navbar, { duration: 0.3, ...originalStyles });
            }
        }

        window.addEventListener("scroll", handleScroll);
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const title = document.getElementById("accueil-title");

        gsap.from(title, {
            duration: 1.5, // Durée de l'animation en secondes
            opacity: 0, // Démarre avec une opacité de 0
            y: 100, // Démarre à 100 pixels en dessous de sa position initiale
            ease: "power4.out", // Type d'animation d'easing (facultatif)
            onComplete: function() {
                // Cette fonction sera appelée une fois l'animation terminée
                title.style.opacity = 1; // Assurez-vous que l'opacité est réinitialisée à 1
            }
        });
    });
</script>
<script>
    // Sélectionnez l'élément du titre
    const titre = document.querySelector('h1');

    // Créez une animation GSAP pour le titre
    gsap.from(titre, {
        opacity: 0, // Commencez avec une opacité de 0 (invisible)
        y: 30, // Déplacez le titre vers le bas de 30 pixels
        duration: 1, // Durée de l'animation en secondes
        ease: 'power2.out', // Courbe d'animation (facultatif)
        delay: 0.5 // Délai avant le démarrage de l'animation (facultatif)
    });
</script>
<script>
    // Sélectionnez tous les éléments avec data-card="zoom"
    const cardsToAnimate = document.querySelectorAll('[data-card="zoom"]');

    // Fonction pour créer l'animation de zoom
    function createZoomAnimation(card) {
        const tl = gsap.timeline({ paused: true });
        tl.to(card, { scale: 1.05, duration: 0.3 }); // Zoom légèrement au survol

        card.addEventListener('mouseenter', () => {
            tl.play(); // Lancez l'animation au survol
        });

        card.addEventListener('mouseleave', () => {
            tl.reverse(); // Inversez l'animation lorsque la souris quitte la carte
        });
    }

    // Appliquez l'animation de zoom à chaque carte
    cardsToAnimate.forEach((card) => {
        createZoomAnimation(card);
    });
</script>


